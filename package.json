{
  "name": "etshop",
  "version": "1.0.0",
  "description": "mern stack e-commerce project",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/data/seeder --import",
    "data:delete": "node backend/data/seeder --delete",
    "build": "npm install --force  && npm install --force --prefix frontend && npm run build --prefix frontend",
    "buildd": "npm install && npm install --prefix frontend"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "axios": "^1.6.7",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.4.2",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "joi": "^17.12.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.12",
    "sharp": "^0.33.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  }
}
